extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Reset your password

            form.form(action=`/api/v1/users/reset-password/${token}` method="POST")
                .form__group
                    label.form__label(for="password") New password
                    input.form__input(type="password", name="password", required)

                .form__group
                    label.form__label(for="passwordConfirm") Confirm password
                    input.form__input(type="password", name="passwordConfirm", required)

                button.btn.btn--green(type="submit") Reset password
